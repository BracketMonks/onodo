.visualization-new.container
  %h2 Create Visualization
  .row
    .col-sm-6
      = form_for @visualization, url: {action: "create"} , method: "post" do |f|
        .form-group
          = f.label "visualization-input-title", "Title"
          = f.text_field :name, class: "form-control"
        = f.submit "Create", class: "btn btn-default btn-primary"