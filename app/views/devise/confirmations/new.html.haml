.signup.devise-page.container
  .row
    .page-header.text-center
      %h2= t '.resend_confirmation_instructions'
    .col-sm-6.col-sm-offset-3
      = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-default' }) do |f|
        = devise_error_messages!
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, class: "form-control"
        .actions
          = f.submit t('.resend_confirmation_instructions'), class: "btn btn-default btn-primary"
          %hr
          .devise-links
            = render "devise/shared/links"