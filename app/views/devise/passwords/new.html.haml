.password-new.devise-page.container
  .row
    .page-header.text-center
      %h2 Did you forget your password?
      %p.lead Enter the email you registered & we will send you a link to restore it
    .col-sm-6.col-sm-offset-3
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-default' }) do |f|
        = devise_error_messages!
        .form-group
          = f.label :email
          = f.email_field :email, autofocus: true, class: "form-control"
        .actions
          = f.submit "Send", class: "btn btn-default btn-primary"