.items-preview-header
  - unless defined? hide_selector
    - if show_visualizations
      %a.btn.btn-default.btn-transparent{ href: "#{params[:controller] == 'pages' ? '/explore/stories' : params[:action] =~ /dashboard/ ? stories_dashboard_path : stories_users_path(@user)}" }
        = t 'common.stories'
      .btn.btn-default.btn-primary
        = t 'common.visualizations'
    - else
      .btn.btn-default.btn-primary
        = t 'common.stories'
      %a.btn.btn-default.btn-transparent{ href: "#{params[:controller] == 'pages' ? '/explore/visualizations' : params[:action] =~ /dashboard/ ? visualizations_dashboard_path : visualizations_users_path(@user)}" }
        = t 'common.visualizations'

  /  .btn-search
  /    %span.search-icon
  %form.form-inline.search-form
    .form-group
      %input.form-control{type: "text", placeholder: t('.search')}
    %button.btn.btn-default{type: "submit" }
      %span.search-icon

  / .search-input.pull-right
  /   .input-group
  /     %input.form-control{:type => "text"}
  /     %span.input-group-btn
  /       %button.btn.btn-default{:type => "submit"}
  /         %span.search-icon

