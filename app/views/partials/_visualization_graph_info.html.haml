.visualization-graph-info.panel.panel-default
  .panel-heading
    - if defined? edit
      %a.btn.btn-default.btn-primary
        %span.btn-icon-pencil
        Edit
    %button.close{type: "button", "aria-label" => "Close"}
      %span{"aria-hidden" => "true"}
        &times
  .panel-body

%script#visualization-graph-info-template{:type => "text/template"}
  %h3.name
    {{ name }}
  .picture
  .description
    {{{ description }}}