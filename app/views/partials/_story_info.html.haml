.story-info.panel.panel-default.active
  .panel-heading
    Story Index
    %button.close{type: "button", "aria-label" => "Close"}
      %span{"aria-hidden" => "true"}
        &times
  .panel-body
    - if @story.chapters
      %ul
        - @story.chapters.each do |chapter|
          %li
            = chapter.name
    - if defined? edit
      %a.btn.btn-default.btn-primary{ href: new_story_chapter_path(@story) }
        Add Chapter