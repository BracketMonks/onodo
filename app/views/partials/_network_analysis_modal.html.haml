#network-analysis-modal.modal.fade{ tabindex: "-1", role: "dialog"}
  .modal-dialog.modal-lg{role: "document"}
    .modal-content
      .modal-header
        %h4.modal-title
          Network Analysis
        %button.close{type: "button", "data-dismiss" => "modal", "aria-label" => "Close"}
      .modal-body
        .row.modal-description
          .col-sm-8.col-sm-offset-2
            %p.text-center
              You can add custom columns based on Network Analysis metrics to your nodes table & use this metrics as nodes color or size
        .row
          .col-sm-4
            %p
              %span{ data: {toggle: "tooltip", placement: "right", "original-title": "Clusters human explanation ..."} }
                = label_tag :clusters, "Clusters"
                %span.icon-question
            = check_box_tag :clusters, 'clusters', true, class: 'switch', data: { "size" => "small" }
          .col-sm-4
            %p
              %span{ data: {toggle: "tooltip", placement: "right", "original-title": "Degree human explanation ..."} }
                = label_tag :degree, "Degree"
                %span.icon-question
            = check_box_tag :degree, 'degree', true, class: 'switch', data: { "size" => "small" }
          .col-sm-4
            %p
              %span{ data: {toggle: "tooltip", placement: "right", "original-title": "Relevance human explanation ..."} }
                = label_tag :relevance, "Relevance"
                %span.icon-question
            = check_box_tag :relevance, 'relevance', true, class: 'switch', data: { "size" => "small" }
          .col-sm-4
            %p
              %span{ data: {toggle: "tooltip", placement: "right", "original-title": "Betweenness human explanation ..."} }
                = label_tag :betweenness, "Betweenness"
                %span.icon-question
            = check_box_tag :betweenness, 'betweenness', true, class: 'switch', data: { "size" => "small" }
          .col-sm-4
            %p
              %span{ data: {toggle: "tooltip", placement: "right", "original-title": "Closeness human explanation ..."} }
                = label_tag :closeness, "Closeness"
                %span.icon-question
            = check_box_tag :closeness, 'closeness', true, class: 'switch', data: { "size" => "small" }
          .col-sm-4
            %p
              %span{ data: {toggle: "tooltip", placement: "right", "original-title": "Coreness (k-index) human explanation ..."} }
                = label_tag :coreness, "Coreness (k-index)"
                %span.icon-question
            = check_box_tag :coreness, 'coreness', true, class: 'switch', data: { "size" => "small" }
          .col-sm-12
            %p
              %span{ data: {toggle: "tooltip", placement: "right", "original-title": "Distance from specific node human explanation ..."} }
                = label_tag :distance, "Distance from specific node"
                %span.icon-question
            = check_box_tag :distance, 'distance', true, class: 'switch', data: { "size" => "small" }
      .modal-footer
        %button.btn.btn-primary{ type: "submit" }
          Calculate
        %a.btn.btn-primary.btn-invert{type: 'button', 'data-dismiss' => 'modal', 'aria-label' => 'Close'} Cancel
